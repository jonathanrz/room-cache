<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <TableRow>
        <TextView android:text="@string/id" android:layout_gravity="end"/>
        <TextView android:id="@+id/data_id" android:layout_marginStart="10dp"/>
    </TableRow>

    <TableRow>
        <TextView android:text="@string/name" android:layout_gravity="end"/>
        <TextView android:id="@+id/data_name" android:layout_marginStart="10dp"/>
    </TableRow>

</TableLayout>